# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# PLUGINS
#
source "${XDG_CONFIG_HOME}/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh"
source "${XDG_CONFIG_HOME}/zsh/plugins/fast-syntax-highlighting/fast-syntax-highlighting.plugin.zsh"

# THEMES
#
# Powerlevel10K (https://github.com/romkatv/powerlevel10k) - configure with `p10k configure`
source "${XDG_CONFIG_HOME}/zsh/themes/powerlevel10k/powerlevel10k.zsh-theme"

## Use powerline
#USE_POWERLINE="true"

## Source manjaro-zsh-configuration
#if [[ -e /usr/share/zsh/manjaro-zsh-config ]]; then
#  source /usr/share/zsh/manjaro-zsh-config
#fi
## Use manjaro zsh prompt
#if [[ -e /usr/share/zsh/manjaro-zsh-prompt ]]; then
#  source /usr/share/zsh/manjaro-zsh-prompt
#fi

alias vim="nvim"
export EDITOR="vim"
export VISUAL="vim"

# `eza`: ls replacement
alias eza="eza --color auto"
alias ls="eza"
alias l="ls --long -a"

# `bat`: cat replacement
alias cat="bat"

# `difftastic`: diff replacement
alias diff="difft --display=inline"

alias ducks="sudo du -acm 2>/dev/null | sort -nr | head -n 20"

# `zoxide`
eval "$(zoxide init zsh)"
